public class Recursion{
    public String name(){
	return "Pan,Katherine";
    }
    public double sqrt(double n){
	if(n<0){
	    throw new IllegalArgumentException();
	}
	else{
	    return helper(n, n/2);
	}
    }
    public double helper(double n, double guess){
	if(n/guess == guess){
	    return guess;}
	else{
	    return helper(n,(n/guess+guess)/2);
	}
    }
}
